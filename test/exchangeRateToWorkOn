        // CONVERTER CURRENCY

const select = document.querySelectorAll("select");
const from = document.querySelector("#from");
const to = document.querySelector("#to");
const amount = document.querySelector("#amountCy");
const result = document.querySelector("#resultCy");
const apiKey = "142eaddcfa102890606bfbbd14279a62";

// value

// const amountValue = parseFloat(amount.value);

select.forEach(op => {
  op.addEventListener("click", loadCurrencies);
  op.addEventListener("click", convertCurrency);
}); // end forEach()

function loadCurrencies() {
  console.log("test");
  let xHTTP = new XMLHttpRequest();

  xHTTP.onreadystatechange = function() {
    if (xHTTP.readyState === 4) {
      let obj = JSON.parse(this.responseText);
      // console.log(obj);
      let options = "";
      for (key in obj.rates) {
        // console.log(obj.rates);
        options += `<option value=${key}>${key}</option>`;
      } // end forloop

      const amountValue = parseFloat(amount.value);
      // console.log(`amountVal : ${amountValue}`);
      // console.log(typeof amountValue);
      from.innerHTML = options;
      to.innerHTML = options;
    } // end readyState
  }; // end onreadystatechange

  xHTTP.open(
    "GET",
    `http://data.fixer.io/api/latest?access_key=${apiKey}&symbols=USD,CAD,JPY,GBP,EUR`,
    true
  );
  xHTTP.send();
}

function convertCurrency() {
  const select = document.querySelectorAll("select");
  const from = document.querySelector("#from").value;
  const to = document.querySelector("#to");
  const amount = document.querySelector("#amountCy");
  const result = document.querySelector("#resultCy");
  const apiKey = "142eaddcfa102890606bfbbd14279a62";

  //  from.options[from.selectedIndex].value;
  // console.log(from.options[from.selectedIndex]);
  const toVal = to.value;

  const amountValue = parseFloat(amount.value);

  // if (fromVal > 0 && toVal.lenght > 0 && amountVal.lenght > 0) {
  let xHTTP = new XMLHttpRequest();
  xHTTP.onreadystatechange = function() {
    if (xHTTP.readyState === 4) {
      let obj = JSON.parse(this.responseText);
      // console.log(`amountVal : ${amountValue}`);
      console.log(obj);

      // console.log(obj.rates);

      // let rate = obj.rates;
      let rate = obj.rates[toVal];

      console.log(rate);

      if (rate != undefined) {
        result.innerHTML = parseFloat(amount) * parseFloat(rate);

        console.log(result.innerHTML);
      }
    }
  }; // end onreadystatechange()
  xHTTP.open(
    "GET",
    `https://data.fixer.io/api/convert?access_key=${apiKey}&from=${from}&to${to}&amount=${amount}`,
    true
  );

  // `http://data.fixer.io/api/latest?access_key=${apiKey}&base=${from}&symbols=${to}`

  // `https://data.fixer.io/api/convert
  //   ?access_key=${apiKey}&from=${from}&to${to}&amount=${amount}`;

  xHTTP.send();
  // }
}